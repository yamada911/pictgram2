<h1>Topics#index</h1>
<p>Find me in app/views/topics/index.html.erb</p>

<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <!--rails07 課題１-->
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon-red' %>
              <% end %>
            <% end %>
              <%= topic.favorites.count %>
                <%= image_tag 'icons/comment.png', class: 'topic-index-comment' %>
            <!--説明は段落を変えたいので<p>要素を用いている-->
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
